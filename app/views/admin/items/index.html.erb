<h1>商品一覧</h1>
<h3><%= link_to '新規登録', new_admin_item_path %></h3>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.title, admin_item_path(item) %></td>
      <td><%= item.non_tax_price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.sale_state %>
        <span class="text-success">販売中</span>
        <% else %>
        <span>販売停止中</span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>