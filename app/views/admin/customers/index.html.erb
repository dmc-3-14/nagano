<!--admin-customers-index 顧客一覧画面を表示するため -->
<div class="container m-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-2"></div>
    <h4 class="my-4 "><span style="background-color:#EFEFEF">　会員一覧　</span></h4>
  </div>
  <table class="table col-7 mx-auto">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%=  customer.id %></td>
        <td><%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
          <% if customer.member_state %>
            <td>退会</td>
          <% else %>
            <td class="text-success">有効</td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
