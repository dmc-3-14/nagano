<div class="container">
  <div class="row">
    <div class="mx-auto">

    <h1>ジャンル編集</h1>
    <%= render 'layouts/errors', obj: @genre %>
    <%= form_for @genre, :url => {action:"update"} do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :name %>
