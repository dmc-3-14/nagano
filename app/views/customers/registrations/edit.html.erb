  <!-- deviceのeditが出る　/nagano/app/views/customers/registrations/edit.html.erb -->
  <h2>会員情報編集</h2>

  <%= form_with(model:@customer, url:customers_path, local: true ,method: :put) do |f| %>
    <label>氏名</label>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.text_field :first_name, autofocus: true %></br>
    <label>フリガナ</label>
      <%= f.text_field :kana_last_name ,autofocus: true %>
      <%= f.text_field :kana_first_name, autofocus: true %></br>
    <label>郵便番号</label>
      <%= f.text_field :post_code, autofocus: true %></br>
    <label>住所</label>
      <%= f.text_field :address, autofocus: true %></br>
    <label>電話番号</label>
      <%= f.text_field :telephone_number, autofocus: true %></br>
    <label>メールアドレス</label>
      <%= f.text_field :email, autofocus: true %></br>
      <% if current_customer.id == @customer.id %>
    <%= f.submit "編集内容を保存　　", class: "btn btn-primary" %>
    <!--退会ボタンはリンク/customers/exit -->
      <% end %>
    <% end %>