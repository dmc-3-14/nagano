<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>会員情報編集</h2>
  <!-- エラーメッセージ -->
  <!-- 編集フォーム -->
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>
    <label>氏名</label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %></br>
    <label>フリガナ</label>
      <%= f.text_field :kana_last_name %>
      <%= f.text_field :kana_first_name %></br>
    <label>郵便番号</label>
      <%= f.text_field :post_code %></br>
    <label>住所</label>
      <%= f.text_field :address %></br>
    <label>電話番号</label>
      <%= f.text_field :telephone_number %></br>
    <label>メールアドレス</label>
      <%= f.text_field :email %></br>
    <%= f.submit "編集内容を保存　　", class: "btn btn-primary" %>
    <% end %>
     <%= link_to "退会", exit_customers_path, class: "btn btn-primary" %>
   </div>
 </div>
</div>