<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h2>新規会員登録</h2>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <table class=table>
        <tr>
          <th>名前</th>
          <th>
            <%= f.label :姓 %>
            <%= f.text_field :last_name, autofocus: true, :placeholder => "令和" %>
          </th>
          <th>
            <%= f.label :名 %>
            <%= f.text_field :first_name, autofocus: true, :placeholder => "道子" %>
          </th>
        </tr>

        <tr>
          <th>フリガナ</th>
          <th>
            <%= f.label :セイ %>
            <%= f.text_field :kana_last_name, autofocus: true, :placeholder => "レイワ" %>
          </th>
          <th>
            <%= f.label :メイ %>
            <%= f.text_field :kana_first_name, autofocus: true, :placeholder => "ミチコ" %>
          </th>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@exaample.com" %></th>
        </tr>

        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th><%= f.text_field :post_code, autofocus: true, :placeholder => "0000000" %></th>
        </tr>

        <tr>
          <th>住所</th>
          <th><%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0"  %></th>
        </tr>

        <tr>
          <th>電話番号(ハイフンなし)</th>
          <th><%= f.text_field :telephone_number, autofocus: true, :placeholder => "00000000000" %></th>
        </tr>

        <tr>
          <th>パスワード(6文字以上)</th>
          <th><%= f.password_field :password, autocomplete: "new-password" %></th>
        </tr>

        <tr>
          <th>パスワード(確認用)</th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
        </tr>

        <tr>
          <th></th>
          <th><%= f.submit "新規登録" , class:'btn btn-success' %></th>
        </tr>
        <% end %>
      </table>

      <br>
      <h5>既に登録済みの方</h5>
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。

    </div>
  </div>
</div>
