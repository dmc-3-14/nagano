<h1>商品編集</h1>
<%= form_with model: @item, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :title %>
  <h4>商品説明</h4>
  <%= f.text_area :body %>
  <h4>ジャンル</h4>
  <h4>税抜価格</h4>
  <h4>販売ステータス</h4>
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
<% end %>