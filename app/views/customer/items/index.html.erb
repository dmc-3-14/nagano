<div class="container m-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-1"></div>
    <h4><strong>商品一覧</strong>(全<%= @items.count %>件)</h4>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="d-flex flex-wrap col-10">
    <% @items.each do |item| %>
      <div class="mx-2">
        <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg", size:'200x150' %>
        <p><%=link_to item.title, item_path(item) %></p>
        <p>¥<%= item.non_tax_price.to_s(:delimited) %></p>
      </div>
    <% end %>
    </div>
    <div class="col-1"></div>
  </div>
</div>
<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>