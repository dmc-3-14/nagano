<h1><strong>商品一覧</strong>(全<%= @items.count %>件)</h1>

<% @items.each do |item| %>
<div>
  <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg", size:'200x150' %>
  <p><%=link_to item.title, item_path(item) %></p>
  <p>¥<%= item.non_tax_price.to_s(:delimited) %></p>
</div>
<% end %>
