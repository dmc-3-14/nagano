<%= attachment_image_tag @item, :image, :fill, 200, 150, fallback: "no_image.jpg", size:'200x150' %>
<p><strong><%= @item.title %></strong></p>
<p><%= @item.body %></p>
<br>
<p>¥<%= @item.tax_included.to_s(:delimited) %>(税込)</p>

<%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, options_for_select((1..20).to_a), include_blank: "個数選択" %>
  <%= f.submit "カートに入れる", class: 'btn btn-success' %>
<% end %>

