<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>会員情報編集</h2>
  <!-- エラーメッセージ -->
  <% if @customer.errors.any? %>
   <%= @customer.errors.count %>error prohibited this obj from being saved:
   <% @customer.errors.full_messages.each do |message| %>
     <%= message %>
   <% end %>
  <% end %>
  <!-- 編集フォーム -->
  <%= form_with model:@customer, local:true do |f| %>
    <label for="inputName">氏名</label>
      <%= f.text_field :last_name, autofocus: true, id:"inputName"%>
      <%= f.text_field :first_name, autofocus: true, id:"inputName"%></br>
    <label for="inputImage">フリガナ</label>
      <%= f.text_field :kana_last_name ,autofocus: true %>
      <%= f.text_field :kana_first_name, autofocus: true %></br>
    <label for="inputIntroduction">郵便番号</label>
      <%= f.text_field :post_code, autofocus: true %></br>
    <label for="inputIntroduction">住所</label>
      <%= f.text_field :address, autofocus: true %></br>
    <label for="inputIntroduction">電話番号</label>
      <%= f.text_field :telephone_number, autofocus: true %></br>
    <label for="inputIntroduction">メールアドレス</label>
      <%= f.text_field :email, autofocus: true %></br>
      <% if current_customer.id == @customer.id %>
    <%= f.submit "編集内容を保存　　", class: "btn btn-primary" %><%= f.submit "退会する", class: "btn btn-danger" %>
      <% end %>
    <% end %>
   </div>
 </div>
</div>