<h3>注文情報入力</h3>


     <%= form_with url: put_order_path do |f| %>
       <h5>支払い方法</h5>
       <div>
          <%= f.radio_button :payment_method, :"銀行振込", checked: true %>
          <%= f.label(:payment_method, "銀行振込") %>
        </div>
        <div>
          <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
          <%= f.label(:payment_method, "クレジットカード") %>
        </div>
        <h5>お届け先</h5>
        <div>
          <%= f.radio_button :order_address_address_type, "ご自身の住所", checked: true %>
          <%= f.label(:_address, "ご自身の住所") %>
          <p>
          <%= @customer.post_code %>
          <%= @customer.address %>
          <br>
          <%#= @custamer.name %>
          </p>
        </div>
        
        <div>
          <%= f.radio_button :order_address_address_type, "登録済住所から選択" %>
          <%= f.label(:order_address, "登録済住所から選択") %>
        </div>
       
       <div>
       <%#= f.collection_select :order_address.current_customer.address, :id , :include_blank => "選択してください"  %>
       </div>
       
       
       
       <div>
          <%= f.radio_button :order_address_address_type, "新しいお届け先" %>
          <%= f.label(:order_address, "新しいお届け先") %>
       </div>

    
     <div class="col-2">
    	<%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
    </div>
    
    <% end %>