<h1>注文履歴一覧</h1>
<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>〒<%= order.post_code %><br>
         <%= order.address %><br>
         <%= order.name %>
        </td>
        <td><% order.orderd_items.each do |orderd_item| %>
              <%= orderd_item.item.title %>
            <% end %>
        </td>

    <% @sum = 0 %>
    <% @orderd_items.each do |orderd_item| %>
        <!--１つの商品の価格×数量を計算-->
        <% @x = orderd_item.price * orderd_item.quantity %>
        <!--eachの数だけ@sumに足していく-->
        <% @sum += @x %>
    <% end %>

        <% @total = @sum +800 %>
        <td><%= @total.to_s(:delimited) %></td>

        <td><%= order.state %></td>


        <td><%= link_to "表示する", order_path(order), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
    </tbody>
</table>