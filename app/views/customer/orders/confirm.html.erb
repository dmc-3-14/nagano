<h3>注文情報確認</h3>
<table class='table'>
  	   <thead>
		    <tr>
			 <th>商品名</th>
			 <th>単価(税込)</th>
			 <th>数量</th>
			 <th>小計</th>
		     </tr>
	   </thead>
	   <tbody>
	       <% tax = 1.1 %>
	       <% @sum = 0 %>
	       
	 <%= form_for @order, :url => {action:"create"} do |f| %>

  	       <% @cart_items.each do |cart| %>
  		  <tr>
  		     <td>
  		         <%= attachment_image_tag cart.item, :image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %>
  		         <%= cart.item.title %>
  		     </td>
  		     <td>¥<%= (cart.item.non_tax_price * tax).floor %></td>
  		     <td><%= cart.amount %>個</td>
  		     <td>¥<%= (cart.amount * cart.item.non_tax_price * tax).floor %></td>
          </tr>
          <% @sum += (cart.amount * cart.item.non_tax_price * tax).floor %>
          <% end %>
       <tbody>
</table>
<% @Fee = 800 %>
<table class='table table-bordered col-2'>
            <tr>
                <th>送料</th>
                <td>¥<%= @Fee %></td>
            </tr>
            <tr>
                <th>商品合計</th>
                <td>¥<%= @sum %></td>
            </tr>
            <tr>
                <th>請求金額</th>
                <td>¥<%= @sum + @Fee %></td>
            </tr>
</table>
<h4>支払い方法</h4>
<p><%= @order.payment_method %><p>
<h4>お届け先</h4>
<%= @order.post_code %> <%= @order.address %> <%= @order.name %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :post_code, :value => @order.post_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :billing_amount, :value => @order.billing_amount %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
<p><%= f.submit '注文を確定する', class: "btn btn-xs btn-success" %><p>
    <% end %>