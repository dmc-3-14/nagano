<div class="container m-5">
  <div class="row">
    <div class="col-2"></div>
    <h4 class="my-4 "><span style="background-color:#EFEFEF">　注文情報確認　</span></h4>
  </div>
  <div class="row">
    <table class='table col-8'>
      	   <thead class="table-active">
    		    <tr>
    			 <th>商品名</th>
    			 <th>単価(税込)</th>
    			 <th>数量</th>
    			 <th>小計</th>
    		     </tr>
    	   </thead>
    	   <tbody>
    	       <% tax = 1.1 %>
    	       <% @sum = 0 %>
    	 <%= form_for @order, :url => {action:"create"} do |f| %>
      	       <% @cart_items.each do |cart| %>
      		  <tr>
      		     <td>
      		         <%= attachment_image_tag cart.item, :image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %>
      		         <%= cart.item.title %>
      		     </td>
      		     <td>¥<%= (cart.item.non_tax_price * tax).floor %></td>
      		     <td><%= cart.amount %>個</td>
      		     <td>¥<%= (cart.amount * cart.item.non_tax_price * tax).floor %></td>
              </tr>
              <% @sum += (cart.amount * cart.item.non_tax_price * tax).floor %>
              <% end %>
           <tbody>
    </table>
    <% @Fee = 800 %>
    <div class="my-box col-auto"></div>
    <table class='table table-bordered col-3'>
                <tr>
                    <th class="table-active">送料</th>
                    <td>¥<%= @Fee %></td>
                </tr>
                <tr>
                    <th class="table-active">商品合計</th>
                    <td>¥<%= @sum %></td>
                </tr>
                <tr>
                    <th class="table-active">請求金額</th>
                    <td>¥<%= @sum + @Fee %></td>
                </tr>
       </table>
    </div>
    <table>
        <tbody>
            <tr>
                <td  style="width:25%" class="py-5" >支払い方法</td>
                <td class="py-5"><%= @order.payment_method %></td>
                <td></td>
            </tr>
            <tr>
                <td class="pb-5">お届け先</td>
                <td colspan="2" class="pb-5"><%= @order.post_code %> <%= @order.address %> <%= @order.name %>
                 <%= f.hidden_field :customer_id, :value => current_customer.id %>
                 <%= f.hidden_field :name, :value => @order.name %>
                 <%= f.hidden_field :post_code, :value => @order.post_code %>
                 <%= f.hidden_field :address, :value => @order.address %>
                 <%= f.hidden_field :billing_amount, :value => @order.billing_amount %>
                 <%= f.hidden_field :payment_method, :value => @order.payment_method %></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><%= f.submit '注文を確定する', class: "btn btn-xs btn-success" %></td>
            </tr>
        </tbody>
    </table>
    
    <% end %>
