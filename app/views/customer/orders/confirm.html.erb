<h3>注文情報確認</h3>

<table class='table'>
  	   
  	   <thead>
		    <tr>
			 <th>商品名</th>
			 <th>単価(税込)</th>
			 <th>数量</th>
			 <th>小計</th>
		     </tr>
	   </thead>
	   
	   <tbody>
	       <% tax = 1.1 %>
	       <% @sum = 0 %>
  	      <% @cart_items.each do |cart| %>
  		  <tr>
  		     <td>
  		         <%= attachment_image_tag cart.item, :image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %>
  		         <%= cart.item.title %>
  		     </td>
  		     <td><%= cart.non_tax_price * tax %></td>
  		     <td><%= cart.amaunt %></td>
  		     <td><%= cart.amaunt * cart.non_tax_price * tax %></td>　
          </tr>
          <%end%>
       <tbody>
    
</table>
<% @Fee = 800 %>
<table class='table'>
       <tbody>
            <tr>
                <th>送料</th>
                <td><%= Fee %></td>
            </tr>
            <tr>
                <th>商品合計</th>
                <td>¥<%= @sum %></td>
            </tr>
            <tr>
                <th>請求金額</th>
                <td><%= @sum + Fee %></td>
            </tr>
       </tbody>
</table>

<h4>支払い方法</h4>
<p><%= "#{session[:order]["payment_method"]}" %></p>

<h4>お届け先</h4>
<p><%= "#{session[:order]["post_number"]} #{session[:order]["address"]} #{session[:order]["name"]}" %></p>

<%= link_to '注文を確定する', complete_order_path, class: "btn btn-xs btn-success" %>