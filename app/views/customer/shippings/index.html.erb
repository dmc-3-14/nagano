<h3>配送先登録 / 一覧</h3>

<teble class="table">
  <tbody>
  <%= form_for @shipping, :url => {action:"create"} do |f| %>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit '新規登録' %></td>
    </tr>
  <% end %>
  </tbody>
</teble>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th>　</th>
    </tr>
  </thead>
  <tbody>
    <% @shippings.each do |shipping| %>
    <tr>
      <td><%= shipping.post_code %></td>
      <td><%= shipping.address %></td>
      <td><%= shipping.name %></td>
      <td><%= link_to "編集する", edit_shipping_path(shipping.id) %><%= link_to "削除する", "/shippings/#{shipping.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  <% end %>
  </tbody>
</table>